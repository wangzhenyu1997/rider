<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/order_detail_part_items"
    android:layout_width="match_parent">

    <LinearLayout style="@style/order_detail_part_item">

        <TextView
            style="@style/order_detail_part_item_hint"
            android:drawableLeft="@mipmap/dingdanbianhao"
            android:text="订单号" />

        <TextView
            android:id="@+id/m_order_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/xml_border_tag_one_frame"
            android:text="预约"
            android:textColor="#EB6100"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/m_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:textColor="@color/color757"
            android:textSize="14sp" />

    </LinearLayout>

    <View style="@style/common_divider" />

    <LinearLayout style="@style/order_detail_part_item">

        <TextView
            style="@style/order_detail_part_item_hint"
            android:drawableLeft="@mipmap/dingdan"
            android:text="订单状态" />

        <TextView
            android:id="@+id/m_status"
            tools:text="初始中.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_border_tag_im_frame"
            android:textColor="@color/im_color"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:id="@+id/l_m_out_no"
        style="@style/common_divider" />

    <LinearLayout
        android:id="@+id/ll_m_out_no"
        style="@style/order_detail_part_item">

        <TextView
            style="@style/order_detail_part_item_hint"
            android:drawableLeft="@mipmap/out_order_big"
            android:text="外部单号" />

        <TextView
            android:id="@+id/m_out_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color757"
            android:textSize="12sp" />

    </LinearLayout>

    <View style="@style/common_divider" />

    <LinearLayout style="@style/order_detail_part_item">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/shijian_new"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="配送时间"
            android:textColor="@color/color000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text=""
            android:textColor="@color/color757"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/common_divider" />

    <LinearLayout style="@style/order_detail_part_item">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/m_time_require"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="时效要求"
            android:textColor="@color/color000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_time_require"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text=""
            android:textColor="@color/color757"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:id="@+id/line_cost_view"
        style="@style/common_divider"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/m_cost_view"
        style="@style/order_detail_part_item"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/feiyong"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="配送费"
            android:textColor="@color/color000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/arrow_right"
            android:drawablePadding="10dp"
            android:gravity="end|center_vertical"
            android:text="￥0.00"
            android:textColor="@color/colorPrice"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/common_divider" />

    <LinearLayout style="@style/order_detail_part_item">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/indent_user"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="下单用户"
            android:textColor="@color/color000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:text=""
            android:textColor="@color/color757"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>