<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_take_order_setting_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="接单设置"
            android:textColor="@color/color333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/tv_take_order_setting_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/close_dialog" />
    </LinearLayout>

    <View style="@style/DivideLineHorizontal" />

    <TextView
        android:id="@+id/tv_take_order_setting_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="工作模式"
        android:textColor="@color/color666"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_model_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_take_order_setting_four"
            style="@style/take_order_setting_item"
            android:layout_marginLeft="15dp"
            android:background="@drawable/selector_hollow_bg"
            android:button="@null"
            android:text="四轮模式" />

        <RadioButton
            android:id="@+id/rb_take_order_setting_two"
            style="@style/take_order_setting_item"
            android:background="@drawable/selector_hollow_bg"
            android:button="@null"
            android:text="二轮模式" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="取货排序"
        android:textColor="@color/color666"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_take_sort_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rb_take_order_setting_take_default"
            style="@style/take_order_setting_item"
            android:text="综合排序" />

        <TextView
            android:id="@+id/rb_take_order_setting_take_distance"
            style="@style/take_order_setting_item"
            android:text="距离排序" />

        <TextView
            android:id="@+id/rb_take_order_setting_take_time"
            style="@style/take_order_setting_item"
            android:text="时间排序" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="送货排序"
        android:textColor="@color/color666"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/rg_delivery_sort_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rb_take_order_setting_delivery_default"
            style="@style/take_order_setting_item"
            android:button="@null"
            android:text="综合排序" />

        <TextView
            android:id="@+id/rb_take_order_setting_delivery_distance"
            style="@style/take_order_setting_item"
            android:button="@null"
            android:text="距离排序" />

        <TextView
            android:id="@+id/rb_take_order_setting_delivery_time"
            style="@style/take_order_setting_item"
            android:button="@null"
            android:text="时间排序" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_take_order_setting_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"
        android:layout_marginLeft="2.5dp"
        android:background="@drawable/xml_fill_white_push_frame"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</LinearLayout>