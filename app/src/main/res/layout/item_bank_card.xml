<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ib_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/xml_card_view_fill_white"
    android:orientation="vertical"
    android:paddingTop="5dp"

    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/ibc_bank_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="工商银行"
        android:textColor="@color/color000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ibc_bank_account"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="户名：男男女女"
        android:textColor="@color/color000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ibc_bank_code"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="账号：201909099876"
        android:textColor="@color/color000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/ibc_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/xml_border_2dp_im"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingTop="1dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp"
            android:text="个人账户"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/ibc_un_bind"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/xml_border_home_tx_frame"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="解绑"
            android:textColor="@color/im_color"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
