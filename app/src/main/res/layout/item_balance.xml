<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ib_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/xml_card_view_fill_white"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="5dp"
    android:paddingRight="15dp"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ib_type"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="支付保证金"
            android:textColor="@color/color000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ib_time"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:gravity="center_vertical|right"
            android:text="2017-09-09 17:34"
            android:textColor="@color/color757"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/ib_money"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:text="+20.00"
        android:textColor="@color/colorPrice"
        android:textSize="14sp" />
</LinearLayout>
